<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.myapplication.Login">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            >




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#99bdf2" />

            <TextView
                android:layout_width="fill_parent"
                android:text="Login Form"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textAlignment="center"
                android:background="#99bdf2"
                android:textColor="#fbfbfb"
                android:layout_weight="0.85" />



            <TextView
                android:layout_width="match_parent"
                android:text=""
                android:layout_height="wrap_content"
                android:background="#99bdf2" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#70be5e"
                android:baselineAligned="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Home      "
                    android:id="@+id/L_Hometv"
                    android:textSize="14dp"
                    android:background="#70be5e"
                    android:onClick="onGreenTabClickHome" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/L_abouttv"
                    android:textSize="14dp"
                    android:text="About     "
                    android:background="#70be5e"
                    android:typeface="sans"
                    android:onClick="onGreenTabClickAbout" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Contact     "
                    android:id="@+id/L_contacttv"
                    android:textSize="14dp"
                    android:typeface="sans"
                    android:onClick="onGreenTabClickContact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="       Messages"
                    android:id="@+id/LO_Messagestv"
                    android:onClick="onGreenTabClickMessages"
                    android:clickable="true"
                    android:textSize="14dp" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:text=""
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Enter Username"
                android:layout_height="wrap_content"
                />



            <EditText
                android:id="@+id/etUseremail"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:hint="  Email Address or Phone Number"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:text="Enter password"
                android:layout_height="wrap_content" />



            <EditText
                android:id="@+id/etPassword"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="match_parent"
                android:text=""
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:background="#edfb2a40">

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:text="Login"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:onClick="onClick"
                    android:background="#b9d1f7"
                    tools:ignore="HardcodedText" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:background="#24eb22">


                <Button
                    android:id="@+id/regButton"
                    android:layout_width="match_parent"
                    android:text="Create Account"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:onClick="onClick"
                    android:background="#a1a0a0" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/nd"
                android:layout_gravity="center_horizontal"
                android:background="#dbdddb" />


        </LinearLayout>
    </ScrollView>




</RelativeLayout>
