                        android:id="@+id/textView11" />

                    <TextView
                        android:layout_width="191dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Rent"
                        android:id="@+id/areatxt"
                        android:textAlignment="center" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:paddingBottom="0.5dp"
                    android:paddingLeft="2.5dp"
                    android:background="#99bdf2" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Price               :"
                        android:textStyle="bold"
                        android:id="@+id/textView11" />

                    <TextView
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Rent"
                        android:id="@+id/pricetxt"
                        android:textAlignment="center" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:paddingBottom="0.5dp"
                    android:paddingLeft="2.5dp"
                    android:background="#99bdf2" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Views             :"
                        android:textStyle="bold"
                        android:id="@+id/textView11" />

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="2323 Views"
                        android:id="@+id/viewstxt"
                        android:textAlignment="center" />
                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:paddingBottom="0.5dp"
                    android:paddingLeft="2.5dp"
                    android:background="#99bdf2" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Description :    "
                        android:textStyle="bold"
                        android:id="@+id/textView11" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This is a 2 bedroomed house"
                        android:id="@+id/descriptiontxt"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:paddingBottom="0.5dp"
                    android:paddingLeft="2.5dp"
                    android:background="#99bdf2" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Post Date      :"
                        android:textStyle="bold"
                        android:id="@+id/tosttextView11" />

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="2323 Views"
                        android:id="@+id/postdatetxt"
                        android:textAlignment="center" />
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:paddingBottom="0.5dp"
                    android:background="#99bdf2"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Contact"
                        android:id="@+id/textViw7"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:typeface="sans"
                        android:background="#e4ddf0"
                        android:textColor="#d60835"
                        android:layout_weight="1.09" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2.5dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="0.5dp"
                    android:background="#99bdf2" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Contact Name:"
                        android:textStyle="bold"
                        android:id="@+id/textView11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="       "
                        android:id="@+id/textView13" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Rent"
                        android:textAlignment="center"
                        android:id="@+id/cnametxt" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2.5dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="0.5dp"
                    android:background="#99bdf2" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Phone Number"
                        android:textStyle="bold"
                        android:id="@+id/textView11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="       "
                        android:id="@+id/textView13" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Rent"
                        android:textAlignment="center"
                        android:id="@+id/cphonetxt" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:paddingBottom="0.5dp"
                    android:paddingLeft="2.5dp"
                    android:background="#99bdf2" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Email Address :"
                        android:textStyle="bold"
                        android:id="@+id/textView11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="       "
                        android:id="@+id/textView13" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Rent"
                        android:textAlignment="center"
                        android:id="@+id/emailtxt" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:paddingBottom="0.5dp"
                    android:background="#99bdf2"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView7"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:typeface="sans"
                        android:background="#e4ddf0"
                        android:textColor="#d60835"
                        android:layout_weight="1.09" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:paddingBottom="0.5dp"
                    android:background="#99bdf2"
                    android:weightSum="1">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Map"
                        android:id="@+id/mapbutton"
                        android:layout_alignBottom="@+id/scrollView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_weight="0.34"
                        android:onClick="onClickHouse" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reserve"
                        android:id="@+id/reservebutton"
                        android:layout_alignTop="@+id/reservebutton"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="0.34"
                        android:onClick="onClickHouse" />

                    <Button
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:id="@+id/clickedHouseBackButton"
                        android:layout_alignParentBottom="true"
                        android:layout_alignRight="@+id/scrollView"
                        android:layout_alignEnd="@+id/scrollView"
                        android:layout_weight="0.34"
                        android:onClick="onClickHouse" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
